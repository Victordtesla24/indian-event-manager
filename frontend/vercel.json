{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": ".*",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://dpg-cu9j7b3qt0us73c81in0-a.render.com/api/v1",
    "VITE_ENV": "production"
  },
  "github": {
    "enabled": true,
    "silent": true
  }
}
