# Backend Environment Variables

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/indian_event_manager

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Server
ENVIRONMENT=development
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# File Upload
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
UPLOAD_DIR=static/uploads

# Railway Specific (Production)
# DATABASE_URL - Will be provided by Railway
# PORT - Will be provided by Railway
# ENVIRONMENT=production
# BACKEND_CORS_ORIGINS=["https://your-frontend-domain.vercel.app"]
# ALLOWED_HOSTS=["your-backend-domain.railway.app"]
