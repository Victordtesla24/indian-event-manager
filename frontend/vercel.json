{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://indian-event-manager.onrender.com/api/v1",
    "VITE_ENV": "production",
    "VITE_ENABLE_ANALYTICS": "true"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://indian-event-manager.onrender.com/api/v1",
      "VITE_ENV": "production",
      "VITE_ENABLE_ANALYTICS": "true"
    }
  },
  "github": {
    "enabled": true,
    "silent": true
  }
}
